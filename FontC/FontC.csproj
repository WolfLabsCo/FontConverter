<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Version>0.1.0</Version>
    <AssemblyTitle>.NET wrapper for `pyftsubset`</AssemblyTitle>
    <Company>WolfLabs</Company>
    <Authors>Joaquín Fritsch Santis</Authors>
    <Copyright>WolfLabs © 2022-2023</Copyright>
    <AssemblyName>$(MSBuildProjectName.ToLower())</AssemblyName>
    <Product>FontConverter</Product>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DebugType>portable</DebugType>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DebugType>none</DebugType>
  </PropertyGroup>

</Project>
